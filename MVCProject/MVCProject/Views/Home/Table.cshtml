@{
    ViewBag.Title = "Angular таблица";
}


<h2>Angular таблица</h2>
<div ng-controller="TableAddressController">
    <table class="tableData" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <th>№ п/п</th>
            <th>Страна</th>
            <th>Город</th>
            <th>Улица</th>
            <th>Номер дома</th>
            <th>Индекс</th>
            <th>Дата и время</th>
        </tr>
        <tr ng-repeat="address in Addresses" ng-class-odd="'odd'" ng-class-even="'even'">
            <td>{{address.Id}}</td>
            <td>{{address.Country}}</td>
            <td>{{address.City}}</td>
               <td>{{address.Stereet}}</td>
       <td>{{address.BuildingNumber}}</td>
       <td>{{address.PostID}}</td>
       <td>{{address.DateTime.slice(6, -2) | date: 'dd-MM-yyyy'}}</td> 

            
        </tr>
    </table>
</div>

@section scripts{
    <script src="~/Scripts/AngularController/TableAddressController.js"></script>
}




